generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model episode {
  id          Int      @id @default(autoincrement())
  date        DateTime @default(now()) @db.Timestamp
  title       String
  description String
  mp3_url     String
  image_url   String
  duration    Int
  show        String
  clyde_id    String   @unique
  created_at  DateTime @default(now()) @db.Timestamp
  updated_at  DateTime @default(now()) @db.Timestamp @updatedAt
}